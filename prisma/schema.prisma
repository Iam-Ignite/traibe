model Article {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text
  category  String
  parentId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Self-referencing relation
  parent   Article?  @relation("ArticleHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children Article[] @relation("ArticleHierarchy")

  @@index([parentId])
  @@index([category])
  @@index([slug])
}
